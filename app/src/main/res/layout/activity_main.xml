<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.josephmolina.getstarted.MainActivity">


    <Switch
        android:id="@+id/AlarmSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Status"
        android:textOff="Alarm Off"
        android:textOn="Alarm On"
        tools:layout_editor_absoluteX="259dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentEnd="true" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AlarmSwitch"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/saveButton"
        android:text="Save Alarm"
        android:onClick="setTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timePicker"
        android:layout_toStartOf="@+id/AlarmSwitch" />
    <TextView
        android:id="@+id/savedAlarmText"
        android:layout_below="@id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
